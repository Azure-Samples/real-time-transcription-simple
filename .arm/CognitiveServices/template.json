{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "transcription",
            "metadata": {
                "description": "The name of the resource group to be created."
            }
        },
        "cognitiveServiceName": {
            "type": "string",
            "defaultValue": "transcription-0000",
            "metadata": {
                "description": "The name of the Cognitive Service to be created."
            }
        },
        "cognitiveServiceSku": {
            "type": "string",
            "defaultValue": "S0",
            "metadata": {
                "description": "The SKU of the Cognitive Service to be created."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "westus",
            "metadata": {
                "description": "The location where the resource group and Cognitive Service will be created."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "name": "[parameters('resourceGroupName')]",
            "location": "[parameters('location')]",
            "properties": {}
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "name": "[concat(parameters('resourceGroupName'), '/', parameters('cognitiveServiceName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('resourceGroupName'))]"
            ],
            "sku": {
                "name": "[parameters('cognitiveServiceSku')]"
            },
            "kind": "TextAnalytics",
            "properties": {}
        }
    ]
}
